generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drink {
  id           Int             @id @default(autoincrement())
  name         String
  instructions String
  alcoholic    Boolean
  ingredients  HasIngredient[]
  reviews      Review[]
}

model Ingredients {
  id         Int             @id @default(autoincrement())
  ingredient String
  drink      HasIngredient[]
}

model HasIngredient {
  drinkId Int
  drink   Drink @relation(fields: [drinkId], references: [id])

  ingredientId Int
  Ingredients  Ingredients @relation(fields: [ingredientId], references: [id])

  measure String

  @@id([drinkId, ingredientId])
}
